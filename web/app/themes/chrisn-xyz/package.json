{
  "name": "chrisn-xyz",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "prebuild": "concurrently yarn:test yarn:typecheck yarn:lint",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "lint": "concurrently yarn:lint:* yarn:typecheck:*",
    "lint:eslint": "eslint assets --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:stylelint": "stylelint assets/**/*.scss"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-preset-env": "^9.1.3",
    "prettier": "^3.0.3",
    "sass": "^1.53.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-prettier": "^4.0.2",
    "stylelint-selector-bem-pattern": "^3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.5.6",
    "vite-plugin-manifest-sri": "^0.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:jest-dom/recommended"
    ]
  },
  "stylelint": {
    "plugins": [
      "stylelint-selector-bem-pattern"
    ],
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "selector-class-pattern": null,
      "prettier/prettier": true,
      "plugin/selector-bem-pattern": {
        "preset": "bem"
      }
    }
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120,
    "importOrder": [
      "^[.].*(?!css)$"
    ],
    "importOrderSeparation": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@fontsource/b612": "^5.0.8",
    "@fontsource/noto-sans": "^5.0.12"
  }
}
